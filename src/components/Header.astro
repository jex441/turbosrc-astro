---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header>
	<div class="bar"></div>

	<nav class="nav">
		
		<header class="header">
		  <a href="/index/"><img src="/logoviolet.png" /></a>
		</header>
  
		<span>
		  <ul class="menu">
			  <li>
				<a href="https://github.com/turbo-src/turbo-src">Install</a>
			  </li>
			  <li>
				<a href="/learn/">Learn</a>
			  </li>
			  <li>
				<a href="/blog/">Blog</a>
			  </li>
			  <li>
				<a href="https://github.com/turbo-src" target="_blank">
				<img src="/github.png" />
			  </a>
			  </li>
		  </ul>
		</span>
	  </nav>
</header>
<style> 
:root {
	--primary: #5000ca;
	--secondary: #E7008A;
	--lightBlue: #38bdf8;
	--gray: #6b7280;
	--dark: #273036;
	--deeppurple: #160f24;
	--light: #F3F4F5;
}
	header {
		margin: 0;
		background: white;
	}
	.header img {
    	width: 200px;
 	}
	h2 {
		margin: 0;
		font-size: 1em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}

	.bar {
     height: .618rem;
     width: 100%;
     display: block;
     background: var(--primary);
     background: linear-gradient(90deg, var(--primary) 20%, var(--secondary) 100%);
    }
	
	.nav {
     position: sticky;
     display: flex;
     flex-direction: row;
     justify-content: flex-start;
     align-items: center;
     width: 100%;
     height: 5rem;
     font-size: 16px;
     overflow: hidden;
 }

 .nav span {
     margin: 1rem;
     display: flex;
     flex-direction: row;
     align-items: center;
     width: 100%;
	 justify-content: flex-end;
 }

 .nav a {
     font-size: 16px;
     text-decoration: none;
     color: var(--dark);
     overflow: hidden;
 }

 .nav a:hover {
     color: var(--primary);
 }

	.social-links,
	.social-links a {
		display: flex;
	}
	@media (max-width: 720px) {
		.social-links {
			display: none;
		}
	}
	.menu {
     display: flex;
     justify-content: flex-end;
     align-items: flex-end;	
	 list-style-type: none;

 }



 .menu li a {
     display: flex;
     align-items: flex-end;
     margin-right: 3rem;
     margin-top: auto;
 }

 .menu li:nth-child(4) {
     margin: 0rem 0rem 0rem 3rem;
 }
</style>
