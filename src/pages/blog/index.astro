---
import BaseHead from "../../components/BaseHead.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../../consts";
import { getCollection } from "astro:content";
import FormattedDate from "../../components/FormattedDate.astro";

const posts = (await getCollection("blog")).sort(
  (a, b) => a.data.pubDate.valueOf() - b.data.pubDate.valueOf()
);
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    <style>

:root {
     --primary: #5000ca;
     --secondary: #E7008A;
     --lightBlue: #38bdf8;
     --gray: #6b7280;
     --dark: #273036;
     --deeppurple: #160f24;
     --light: #F3F4F5;
 }

 .bar {
     height: 7px;
     width: 100%;
     display: block;
     background: var(--primary);
     background: linear-gradient(90deg, var(--primary) 20%, var(--secondary) 100%);
 }

 .nav {
     position: sticky;
     display: flex;
     flex-direction: row;
     justify-content: flex-start;
     align-items: center;
     width: 100%;
     height: 5rem;
     font-size: 16px;
     overflow: hidden;
	 background-color:white;
	 list-style-type: none;
 }

 .nav span {
     margin: 1rem;
     display: flex;
     flex-direction: row;
     align-items: center;
     width: 100%;
	 font-family: 'Poppins', sans-serif;
	font-weight: lighter;
 }

 .nav a {
     font-size: 16px;
     text-decoration: none;
     color: var(--dark);
     overflow: hidden;
 }

 .nav a:hover {
     color: var(--primary);
 }

 .menu {
     width: 100%;
     display: flex;
     flex-direction: row;
     align-items: baseline;
     justify-content: flex-end;
     list-style-type: none;
     margin: 0;
     padding: 0;
 }

 .menu {
     display: flex;
     justify-content: flex-end;
     align-items: flex-end;
 }

 .menu li a {
     display: flex;
     align-items: flex-end;
     margin-right: 2rem;
     margin-top: auto;
	 letter-spacing: .5px;
 }

 .menu li:nth-child(4) {
     margin: 0rem 0rem 0rem 3rem;
 }
 .header img {
	max-width: 200px;
	padding: 13px 15px 15px 12px;
 }
      main {
      }
      ul {
        display: flex;
        flex-wrap: wrap;
        gap: 2rem;
        list-style-type: none;
        margin: 0;
        padding: 0;
        flex-direction: column;
      }
      ul li {
      }
      ul li * {
        transition: 0.2s ease;
      }

      ul li img {
        margin-bottom: 0.5rem;
        border-radius: 12px;
      }
      ul li a {
        display: flex;
        flex-direction: column;
        gap: 10px;
      }
	  .posts-map{
		display: flex;
		flex-direction: column;
		gap: 10px;
	  }
      .title {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: "Poppins", sans-serif;
        font-weight: 300;
        font-size: 12px;
        letter-spacing: 0.5px;
        scroll-behavior: smooth;
        overflow: visible;
        color: var(--dark);
        font-size: 52px;
        font-weight: 600;
        text-decoration: none;
      }
      .subtext {
        width: 100%;
        font-family: "Poppins", sans-serif;
        font-style: italic;
        font-weight: 300;
        font-size: 26px;
        line-height: 30px;
        color: black;
        margin: 0;
      }
      .date {
        margin: 0;
        font-family: "Poppins", sans-serif;
        color: black;
        letter-spacing: 0.5px;
        font-weight: 400;
        font-size: 21px;
      }
	  .title-link{
		text-decoration: none;
	  }
      .read-more-link {
        text-decoration: underline;
		color:black;
      }
      .read-more {
        margin: 0;
        color: black;
      }

      @media (max-width: 720px) {
        ul {
          gap: 0.5em;
        }
        ul li {
          width: 100%;
          text-align: center;
        }
        ul li:first-child {
          margin-bottom: 0;
        }
        ul li:first-child .title {
          font-size: 1.563em;
        }
      }
    </style>
  </head>
  <body>
	<div class="bar"></div>
    <nav class="nav">

      <header class="header">
        <a href="../../index/"><img src="/logoviolet.png" /></a>
      </header>

      <span>
        <ul class="menu">
            <li>
              <a href="https://github.com/turbo-src/turbo-src">Install</a>
            </li>
            <li>
              <a href="../../learn/">Learn</a>
            </li>
            <li>
              <a href="../../blog/">Blog</a>
            </li>
            <li>
              <a href="https://github.com/turbo-src" target="_blank">
              <img src="/github.png" />
            </a>
            </li>
        </ul>
      </span>
    </nav>
    <main>
      <section>
        <ul>
          {
            posts.map((post) => (
              <li class="posts-map">
                <a class="title-link" href={`/blog/${post.slug}/`}>
                  <h4 class="title">{post.data.title}</h4>
                </a>
                <p class="date">
                  {post.data.description} -
                  <FormattedDate date={post.data.pubDate} />
                </p>
                <p class="subtext">{post.data.subText}</p>
                <a class="read-more-link" href={`/blog/${post.slug}/`}>
                  <span class="read-more">Read More</span>
                </a>
              </li>
            ))
          }
        </ul>
      </section>
    </main>
    <Footer />
  </body>
</html>
