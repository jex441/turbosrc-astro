---
import type { CollectionEntry } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import FormattedDate from "../components/FormattedDate.astro";

type Props = CollectionEntry<"blog">["data"];

const { title, description, pubDate, updatedDate, heroImage, subText } = Astro.props;
---

<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
    <style>

:root {
     --primary: #5000ca;
     --secondary: #E7008A;
     --lightBlue: #38bdf8;
     --gray: #6b7280;
     --dark: #273036;
     --deeppurple: #160f24;
     --light: #F3F4F5;
 }

 .bar {
     height: 7px;
     width: 100%;
     display: block;
     background: var(--primary);
     background: linear-gradient(90deg, var(--primary) 20%, var(--secondary) 100%);
 }

 .nav {
     position: sticky;
     display: flex;
     flex-direction: row;
     justify-content: flex-start;
     align-items: center;
     width: 100%;
     height: 5rem;
     font-size: 16px;
     overflow: hidden;
	 background-color:white;
	 list-style-type: none;
 }

 .nav span {
     margin: 1rem;
     display: flex;
     flex-direction: row;
     align-items: center;
     width: 100%;
	 font-family: 'Poppins', sans-serif;
	font-weight: lighter;
 }

 .nav a {
     font-size: 16px;
     text-decoration: none;
     color: var(--dark);
     overflow: hidden;
 }

 .nav a:hover {
     color: var(--primary);
 }

 .menu {
     width: 100%;
     display: flex;
     flex-direction: row;
     align-items: baseline;
     justify-content: flex-end;
     list-style-type: none;
     margin: 0;
     padding: 0;
 }

 .menu {
     display: flex;
     justify-content: flex-end;
     align-items: flex-end;
 }

 .menu li a {
     display: flex;
     align-items: flex-end;
     margin-right: 2rem;
     margin-top: auto;
	 letter-spacing: .5px;
 }

 .menu li:nth-child(4) {
     margin: 0rem 0rem 0rem 3rem;
 }
 .header img {
	max-width: 200px;
	padding: 13px 15px 15px 12px;
 }


      main {
        width: calc(100% - 2em);
        max-width: 100%;
        margin: 0;
		background-color: white;
      }
      .hero-image {
        width: 100%;
      }
      .hero-image img {
        display: block;
        margin: 0 auto;
        border-radius: 12px;
        box-shadow: var(--box-shadow);
      }
      .prose {
        width: 900px;
        max-width: calc(100% - 2em);
        margin: auto;
        padding: 1em;
        color: rgb(var(--gray-dark));
		font-family: 'Poppins', sans-serif;
      }
      .title {
        margin-bottom: 1em;
        padding: 1em 0;
        text-align: center;
        line-height: 1;
      }
      .title h1 {
        margin: 0 0 0.5em 0;
      }
      .date {
        margin-bottom: 0.5em;
        color: rgb(var(--gray));
      }
      .last-updated-on {
        font-style: italic;
      }
      .blog {
        width: 100vw;
        min-height: 100vh;
        display: flex;
        align-items: center;
        flex-direction: column;
        padding: 5rem 19rem 5rem 18rem;
      }

      .blog article {
        width: 100%;
        min-height: 18rem;
        display: flex;
        flex-direction: column;
        margin-top: 1rem;
      }
      .blogHeadline {
        overflow: visible;
        color: var(--dark);
        font-size: 52px;
        font-weight: 600;
		font-family: 'Poppins', sans-serif;
		text-align: left;
      }
      .blogHeadline a {
        overflow: visible;
        color: var(--dark);
        font-size: 52px;
        font-weight: 600;
        text-decoration: none;
      }

      .blogHeadline a:hover {
        color: #000;
      }

      .author {
        height: 4rem;
        margin: 2rem 0rem 2rem 0rem;
        display: flex;
        align-items: center;
        justify-content: space-between;
        width: 100%;
      }

      .author span {
        display: flex;
        align-items: center;
        object-fit: contain;
        font-weight: 400;
        font-size: 21px;
      }

      .author span img {
        margin-right: 2rem;
        height: 3rem;
        width: 3rem;
        border-radius: 100%;
      }

      .blogSubhead {
        width: 100%;
        margin: 0rem 0 2rem 0;
        font-style: italic;
        font-size: 26px;
        line-height: 30px;
      }

      .readMore a {
        font-weight: 400;
        color: #333;
        font-size: 18px;
        text-decoration: underline;
      }

      .readMore a:hover {
        color: var(--dark);
        font-size: 18px;
        text-decoration: underline;
      }

      @media (max-width: 900px) {
        .blog {
          padding: 3rem 2rem 0 1rem;
        }

        .author span img {
          margin-right: 1rem;
        }

        .blog article {
          height: auto;
        }
      }

	  .blogSubhead {
    width: 100%;
    margin: .5rem 0 1rem 0;
    font-size: 26px;
    line-height: 30px;
    overflow: visible;
    font-style: italic;
	font-family: 'Poppins', sans-serif;
}

.blogSubhead a {
    color: rgb(116, 116, 116);
    line-height: 30px;
    font-size: inherit;
    text-decoration: none;
}

.blogSubhead a:hover {
    color: #000;
}
.description-line{
	display: flex;
    align-items: center;
    object-fit: contain;
    font-size: 21px;
}


    </style>
  </head>

  <body>
    <div class="bar"></div>
    <nav class="nav">

      <header class="header">
        <a href="../../index/"><img src="/logoviolet.png" /></a>
      </header>

      <span>
        <ul class="menu">
            <li>
              <a href="https://github.com/turbo-src/turbo-src">Install</a>
            </li>
            <li>
              <a href="../../learn/">Learn</a>
            </li>
            <li>
              <a href="../../blog/">Blog</a>
            </li>
            <li>
              <a href="https://github.com/turbo-src" target="_blank">
              <img src="/github.png" />
            </a>
            </li>
        </ul>
      </span>
    </nav>
    <main>
      <article>
        <div class="prose">
          <div class="title">
            <div class="date">
              {
                updatedDate && (
                  <div class="last-updated-on">
                    Last updated on <FormattedDate date={updatedDate} />
                  </div>
                )
              }
            </div>
            <header class="blogHeadline">{title}</header>
			<p class="description-line">{description} -	â€Ž <FormattedDate date={pubDate} /></p>
			<p class="blogSubhead">{subText}</p>
          </div>
          <slot />
        </div>
      </article>
    </main>
  </body>
</html>
